<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous" />
    <title>Rest API</title>
    <link href="/css/site.css" rel="stylesheet" />
</head>

<body>
    <%- include('partials/header.ejs') %>
        <div class="container">
            <% if(typeof(content)==='string' ) { %>
                <h4>
                    <%= content%>
                </h4>
                <% }else {%>
                    <h2 id="idCard">Идентификатор карточки: <%- content[0].AccountCard.CardId %></h2>
                    <h3 id="cardVersion">Номер версии: <%= content[0].AccountCard.NumberVersion %>
                    </h3>
                    <div class="row">
                        <div class="col-4">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Название поля</th>
                                        <th>Значение поля</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% content.forEach(function(connectionTable) { %>
                                        <% var value %>
                                            <% if (connectionTable.FieldCard.DataType==='String' ) {
                                                value=connectionTable.ValueString %>
                                                <% } else {value=connectionTable.ValueInteger} %>
                                                    <tr>
                                                        <td id="<%= connectionTable.FieldCard.DataType %>">
                                                            <%= connectionTable.FieldCardName %>
                                                        </td>
                                                        <td id="<%= value.Id %>">
                                                            <%= value.Value %>
                                                        </td>
                                                    </tr>
                                                    <% }) %>
                                </tbody>
                            </table>
                            <button id="patch" class="btn btn-success">patch</button>
                            <div id="data-container"></div>
                        </div>
                        <div class="col-4 scroll">
                            <div class="form-floating mb-3 mt-3">
                                <input class="form-control" id="fieldCardName" placeholder="Название поля карточки"
                                    autocomplete="off" />
                                <label for="fieldCardName" class="control-label">Название поля карточки</label>
                            </div>
                            <div class="form-floating mb-3">
                                <input class="form-control" id="cardValue" placeholder="Значение поля карточки"
                                    autocomplete="off" />
                                <label for="cardValue" class="control-label">Значение поля карточки</label>
                            </div>
                            <div class="justify-content-between">
                                <div class="btn btn-success mb-3" id="add">Добавить поле</div>
                                <div class="btn btn-danger mb-3" id="delete">Удалить последнее поле</div>
                            </div>
                        </div>
                    </div>
                    <% } %>
        </div>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.3/jquery.min.js"></script>
        <script src="/js/field.js"></script>
</body>

</html>