<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous" />
    <title>Rest API</title>
</head>

<body>
    <%- include('partials/header.ejs') %>
        <div class="container">
            <% if(typeof(content)==='string' ) { %>
                <h4>
                    <%= content%>
                </h4>
                <% }else {%>
                    <h2 id="idCard">Идентификатор карточки: <%- content[0].AccountCard.Id %></h2>
                    <h3 id="cardVersion">Номер версии: <%= content[0].AccountCardNumberVersion %>
                    </h3>
                    <div class="col-6">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Название поля</th>
                                    <th>Значение поля</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                <% content.forEach(function(connectionTable) { %>
                                    <% var value %>
                                        <% if (connectionTable.FieldCard.DataType==='String' ) {
                                            value=connectionTable.ValueString %>
                                            <% } else {value=connectionTable.ValueInteger} %>
                                                <tr>
                                                    <td>
                                                        <%= connectionTable.FieldCardName %>
                                                    </td>
                                                    <td id="<%= value.Id %>">
                                                        <%= value.Value %>
                                                    </td>
                                                    <td><input class="form-check-input" type="checkbox" /></td>
                                                </tr>
                                                <% }) %>
                            </tbody>
                        </table>
                        <button id="put" class="btn btn-success">put</button>
                    </div>
                    <% } %>
        </div>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.3/jquery.min.js"></script>
        <script>
            $('#put').click(function (e) {
                e.preventDefault();
                class ConnectionTable {
                    Id
                    AccountCardNumberVersion
                    FieldCardName
                    ValueId
                    constructor(checkbox) {
                        this.Id = this.getId()
                    }
                    getId() {
                        let stringId = $('#idCard').text()
                        let id = stringId.slice(stringId.indexOf(': ') + 2, stringId.length)
                        return id
                    }
                }

                var checkboxes = $('input[type=checkbox]')
                for (let i = 0; i < checkboxes.length; i++) {
                    if ($(checkboxes[i]).prop('checked')) {
                        let conTable = new ConnectionTable(checkboxes[i])
                    }
                }
            });
        </script>
</body>

</html>